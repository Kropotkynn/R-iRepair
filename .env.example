# =====================================================
# Configuration R iRepair pour Serveur de Production
# =====================================================

# ===== Base de Données PostgreSQL =====
DB_HOST=localhost
DB_PORT=5432
DB_USER=rirepair_user
DB_PASSWORD=your_secure_password_here
DB_NAME=rirepair
DB_SSL=false

# Alternative: URL complète de connexion
# DATABASE_URL=postgresql://rirepair_user:password@localhost:5432/rirepair

# ===== Application =====
NODE_ENV=production
PORT=3000

# Clé secrète pour JWT (CHANGEZ EN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# URL de base de l'application
NEXT_PUBLIC_BASE_URL=https://votre-domaine.com

# ===== Email (Optionnel) =====
# Pour les notifications automatiques
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@rirepair.com

# ===== Stockage de Fichiers (Optionnel) =====
# Pour les images et documents
UPLOAD_DIR=/var/www/rirepair/uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# ===== Redis (Optionnel) =====
# Pour le cache et les sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# ===== Monitoring (Optionnel) =====
# Pour la surveillance
SENTRY_DSN=
ANALYTICS_ID=

# ===== Sécurité =====
# CORS et sécurité
ALLOWED_ORIGINS=https://votre-domaine.com,https://admin.votre-domaine.com
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===== Backup =====
# Configuration de sauvegarde automatique
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
S3_BUCKET=rirepair-backups
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=