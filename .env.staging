# Base de donn√©es PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USER=rirepair_user
DB_PASSWORD=CHANGEZ_CE_MOT_DE_PASSE_STAGING
DB_NAME=rirepair_staging
DB_SSL=false

# JWT Secret
JWT_SECRET=CHANGEZ_CETTE_CLE_JWT_STAGING

# Redis
REDIS_URL=redis://rirepair-redis:6379
REDIS_PASSWORD=CHANGEZ_MOT_DE_PASSE_REDIS_STAGING

# =====================================================
# üåê DOMAINE ET URLs
# =====================================================

# Domaine staging
DOMAIN=staging.votre-domaine.com

# URLs publiques
NEXT_PUBLIC_API_URL=https://staging.votre-domaine.com/api/v1
NEXT_PUBLIC_BASE_URL=https://staging.votre-domaine.com
