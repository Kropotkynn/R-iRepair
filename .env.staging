# =====================================================
# üöÄ ENVIRONNEMENT
# =====================================================

NODE_ENV=staging
PORT=8000
FRONTEND_PORT=3000

# =====================================================
# üîß CONFIGURATION APPLICATION
# =====================================================

NEXT_PUBLIC_APP_NAME=R iRepair Staging
NEXT_PUBLIC_APP_VERSION=1.0.0-staging

