# =====================================================
# üîí S√âCURIT√â AVANC√âE
# =====================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

SESSION_SECRET=CHANGEZ_CE_SECRET_DE_SESSION_STAGING
