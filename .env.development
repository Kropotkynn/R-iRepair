# =====================================================
# R iRepair - Configuration Development
# =====================================================

# =====================================================
# üîê S√âCURIT√â
# =====================================================

# Base de donn√©es PostgreSQL
DB_HOST=postgres
DB_PORT=5432
DB_USER=rirepair_user
DB_PASSWORD=rirepair_dev_password
DB_NAME=rirepair_dev
DB_SSL=false

# JWT Secret
JWT_SECRET=dev-jwt-secret-not-for-production-use-only

# Redis
REDIS_URL=redis://rirepair-redis:6379
REDIS_PASSWORD=rirepair_redis_dev

# =====================================================
# üåê DOMAINE ET URLs
# =====================================================

# Domaine local
DOMAIN=localhost

# URLs publiques
NEXT_PUBLIC_API_URL=http://localhost:8000/api/v1
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# URLs internes
FRONTEND_URL=http://frontend:3000
BACKEND_URL=http://backend:8000

# =====================================================
# üìß CONFIGURATION EMAIL (Optionnel en dev)
# =====================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=dev@example.com
SMTP_PASSWORD=dev-password
SMTP_FROM=dev@localhost
SMTP_FROM_NAME=R iRepair Dev

# =====================================================
# üöÄ ENVIRONNEMENT
# =====================================================

NODE_ENV=development
PORT=8000
FRONTEND_PORT=3000

# =====================================================
# üîß CONFIGURATION APPLICATION
# =====================================================

NEXT_PUBLIC_APP_NAME=R iRepair Dev
NEXT_PUBLIC_APP_VERSION=1.0.0-dev

ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://frontend:3000

# =====================================================
# üìä MONITORING ET LOGS
# =====================================================

LOG_LEVEL=debug
ENABLE_METRICS=true

# =====================================================
# üéØ FEATURES FLAGS
# =====================================================

NEXT_PUBLIC_ENABLE_LIVE_CHAT=false
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# =====================================================
# üîí S√âCURIT√â AVANC√âE
# =====================================================

RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

SESSION_SECRET=dev-session-secret-not-for-production
SESSION_MAX_AGE=86400000

CORS_ENABLED=true

# =====================================================
# üê≥ DOCKER
# =====================================================

COMPOSE_PROJECT_NAME=rirepair-dev
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1
